#readymade
  background: #222

#readymade .readymade-site-background
  opacity: 0.1

#readymade[data-location-hash="#/"] .readymade-site-background
  opacity: 1

#readymade
  &[data-location-hash="#/classify"]
    .readymade-main-stack
      width: 95vw

  [data-readymade-page="science"] > * // Translated element
    background: rgba(white, 0.8)
    color: black
    display: flex
    padding: 3em 5em

    & > section
      flex: 5

      & + section
        flex: 2
        margin-left: 3vw

    h1
      margin: 0

    figure
      background: #fff
      box-shadow: 0 1px 5px -3px black
      margin: 3em 0
      padding: 1vw

      img,
      video
        width: 100%

    figcaption
      color: #666
      font-size: 12px
      font-weight: bold
      text-align: center

    img
      display: block
      margin: 0 auto
      max-width: 100%

.readymade-api-info-container
  display: inline-block
  margin: 0 1em
  font-size: 14px
  text-transform: uppercase
  letter-spacing: 2px

.nesting-area
  cursor: not-allowed
  fill: black
  fill-opacity: 0.75
  stroke: white
  stroke-width: 0

.pinpoint
  cursor: move

.marking-surface-tool-controls .decision-tree-choice
  white-space: nowrap

  .readymade-choice-image img
    border-radius: 50%
    width: 48px
    height: 48px

.count-badge
  background: rgba(black, 0.75)
  border-radius: 1em
  box-sizing: border-box
  display: inline-block
  font-size: 10px
  font-weight: bold
  float: right
  height: 2em
  line-height: 2em
  margin-right: 3px
  min-width: 2em
  padding: 0 3px
  text-align: center

  &[data-count="0"]
    display: none
