#readymade
  background: #222

#readymade .readymade-site-background
  opacity: 0.1

#readymade[data-location-hash="#/"] .readymade-site-background
  opacity: 1

#readymade
  &[data-location-hash="#/classify"]
    .readymade-main-stack
      width: 95vw

.nesting-area
  fill: black
  fill-opacity: 0.75
  pointer-events: none
  stroke: white
  stroke-width: 0

.pinpoint
  cursor: move

.marking-surface-tool-controls .decision-tree-choice
  white-space: nowrap

  .readymade-choice-image img
    border-radius: 50%
    width: 48px
    height: 48px

.count-badge
  background: rgba(black, 0.75)
  border-radius: 1em
  box-sizing: border-box
  display: inline-block
  font-size: 10px
  font-weight: bold
  float: right
  height: 2em
  line-height: 2em
  margin-right: 3px
  min-width: 2em
  padding: 0 3px
  text-align: center

  &[data-count="0"]
    display: none
